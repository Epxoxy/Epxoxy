                                <Slider Grid.Row="2" Grid.Column="1" Maximum="255" Value="{Binding Green}" VerticalAlignment="Center"/>
                                <Slider Grid.Row="3" Grid.Column="1" Maximum="255" Value="{Binding Blue}" VerticalAlignment="Center"/>
